<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>report</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <style>
        .row-content {
            margin-bottom: 30px;
        }

        .jumbotron {
            padding: 2rem 1rem;
            margin-bottom: 2rem;
            background-color: #e9ecef;
            border-radius: .3rem;
        }

        body {
            padding: 40px;
        }

        a {
            font-size: 0;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row row-content">

            <div class="col-xs-12 pb-1 text-center" style="border-bottom: 2px solid #FF9D9D;">
                <h4 style="vertical-align: sub;" class="me-4 mb-1 d-inline-block">Patient Medical Report</h4>
                <img src="https://svgshare.com/i/_36.svg" width="70" height="70" class="img-fluid mb-1" />
            </div>
        </div>
        <div class="row row-content">

            <div class="col-xs-6">
                <% if (patient) { %>
                    <p class="mb-1">Name : <%= patient.firstName + ' ' + patient.lastName %>
                    </p>
                    <p class="mb-1">Length : <%= patient.length +'m' %>
                    </p>
                    <p class="mb-1">Weight : <%= patient.weight +'kg' %>
                    </p>
                    <% } %>
            </div>
            <div class="col-xs-6">
                <% if (patient) { %>
                    <p class="mb-1">Email : <%= patient.user.email %>
                    </p>
                    <p class="mb-1">Phone number : <%= patient.phone %>
                    </p>
                    <% } %>
            </div>

        </div>
        <div class="row row-content">
            <table class="table caption-top table-bordered">
                <caption>Sessions :</caption>
                <thead class="table-danger">
                    <tr>
                        <th scope="col">Doctor</th>
                        <th scope="col">Clinic</th>
                        <th scope="col">Date</th>
                        <th scope="col">Type</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (sessions.length> 0) { %>
                        <% sessions.forEach(session=> {%>
                            <tr>
                                <td>
                                    <%= session.doctorName %>
                                </td>
                                <td>
                                    <%= session.clinicName %>
                                </td>
                                <td>
                                    <%= session.date %>
                                </td>
                                <td>
                                    <%= session.type %>
                                </td>
                                <td>
                                    <%= session.description %>
                                </td>
                            </tr>
                            <tr>

                                <td colspan="5" class="pt-4 pb-4">
                                    <div class="container-fluid">
                                        <div class="row text-center">
                                            <div class="col-xs-6">
                                                <%= session.medicine %>
                                            </div>
                                            <div class="col-xs-6">
                                                Doctor notes : <%= session.doctorReport %>
                                            </div>
                                            <div class="col-xs-12 mt-3 mb-3">
                                                Photos
                                            </div>
                                            <div class="col-xs-12">
                                                <div class="container-fluid">
                                                    <div class="row">
                                                        <% if (session.photos.length> 0) { %>
                                                            <% session.photos.forEach(photo=> {%>
                                                                <div class="col-xs-3">
                                                                    <a href="<%= photo.url %>" alt="">
                                                                        <img src="<%= photo.url %>"
                                                                            class="img-fluid img-thumbnail" />
                                                                    </a>
                                                                </div>
                                                                <% });%>
                                                                    <% }%>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% });%>
                                <% }%>
                </tbody>
            </table>
        </div>
</body>

</html>